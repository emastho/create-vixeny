doctype html
html
  head
    title= pageTitle
    style.
      /* Basic Reset */
      body, html {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background-color: #2C2A4A; /* Dark purple background */
        color: #C7C5F4; /* Light purple text */
      }

      /* Header styling */
      header {
        background-color: #1E1C36; /* Darker purple */
        color: white;
        padding: 10px 0;
        text-align: center;
      }

      header a {
        color: white;
        margin: 0 15px;
        text-decoration: none;
      }

      /* Footer styling */
      footer {
        background-color: #1E1C36; /* Darker purple */
        color: white;
        text-align: center;
        padding: 10px 0;
        position: fixed;
        bottom: 0;
        width: 100%;
      }

      /* Main content styling */
      main {
        text-align: center;
        padding: 20px;
      }

      /* Image centering */
      .centered-img {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%; /* Adjust this value based on your preference */
      }
  body
    include ../components/header.pug
    
    block content

    include ../components/footer.pug
